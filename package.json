{
  "name": "agriguard",
  "version": "1.0.0",
  "description": "Parametric crop insurance platform powered by WeatherXM",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "smart-contracts:compile": "cd contracts && npx hardhat compile",
    "smart-contracts:test": "cd contracts && npx hardhat test",
    "smart-contracts:deploy": "cd contracts && npx hardhat run scripts/deploy.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "weather:sync": "node scripts/weather-sync.js",
    "weather:store": "ts-node --project tsconfig.node.json scripts/storeWeather.ts",
    "test:filecoin": "ts-node --project tsconfig.node.json scripts/testFilecoinIntegration.ts",
    "automate": "ts-node --project tsconfig.node.json scripts/automateWeatherChecks.ts",
    "automate:create-task": "npm run automate create-task",
    "automate:simulate": "npm run automate simulate",
    "automate:check": "npm run automate check-weather",
    "automate:status": "npm run automate status",
    "setup-policies": "ts-node scripts/setupTestPolicies.ts",
    "deploy:prod": "npm run build && npm run smart-contracts:deploy && vercel deploy --prod",
    "install:sharp": "npm install sharp --optional"
  },
  "keywords": [
    "crop insurance",
    "parametric insurance",
    "weatherxm",
    "defi",
    "agriculture",
    "smart contracts",
    "weather oracle",
    "blockchain"
  ],
  "author": "AgriGuard Team",
  "license": "MIT",
